#########################################################
#
#	Compiler configuration
#
# Compiler
export CXX		= g++
# Compiler flags
export CXXFLAGS		= -std=c++17				\
			  -Wall					\
			  -Wextra				\
			  -w					\
			  -pedantic				\
			  -Werror				\
			  -ffreestanding			\
			  -fno-exceptions			\
			  -fno-rtti				\
			  -fno-threadsafe-statics		\
			  -nostdlib				\
			  -fno-pic				\
			  -fno-pie				\
			  -O3					\
			  -s					\
			  -mno-3dnow				\
			  -mno-sse				\
			  -mno-sse2				\
			  -mno-sse3				\
			  -mno-mmx				\
			  -m32					\
			  -march=i386				\
			  -mno-red-zone


#########################################################
#
#	Assambler configuration
#
# Assambler
export AS		= as
# Assambler flags
export ASFLAGS		= --32


#########################################################
#
#	Linker configuration
#
# Linker
export LD		= ld
# Linker flags
export LDFLAGS		= -n					\
			  -m elf_$(IGROS_ARCH)			\
			  -z max-page-size=0x1000

